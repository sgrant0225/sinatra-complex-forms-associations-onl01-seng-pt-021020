<h1>Create a new Pet</h1>

<form action="/pets" method="POST">
  <h3>Existing Owners</h3>
  <% @owners.each do |owner| %>
    <input type="radio" name="owners[id]" id="<%= owner.id %>" value="<%= owner.id %>"/><%= owner.name %><br>
  <% end %>
  <br>

    <input type='radio' name="owners[id]" id="new_owner">
    <label>New owner: </label>
    <input type="text" name="new_owner" id="owner_name"></input>
    <br><br>

    <label for="pet_name">Pet name:</label>
    <input type="text" id="pet_name" name="pet[name]"/>

  <input type="submit" value="Create Pet">
</form>

